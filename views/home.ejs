<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/header') %>
        <title>Home | INKSPIRE</title>
</head>

<body>
    <%- include('./partials/nav') %>

        <div class="container my-4">
            <div class="d-flex flex-wrap">
                <% blogs.forEach((blog)=> { %>
                    <div class="card m-3 flex-item" style="width: 18rem;">
                        <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="cover-image">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= blog.title %>
                            </h5>
                            <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
        <%- include('./partials/scripts') %>
</body>

</html>